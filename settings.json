{
    // ===== Visual Studio Code Settings =====
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "debug.toolBarLocation": "docked",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "scm.alwaysShowRepositories": true,
    "workbench.tips.enabled": false,
    "extensions.ignoreRecommendations": true,
    "extensions.autoUpdate": false,
    "update.mode": "none",
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.decorations.badges":false,
    "workbench.editor.decorations.colors": false,
    "editor.fontFamily": "'Cascadia Code'",
    "editor.fontLigatures": true,
    "security.workspace.trust.enabled" : false,
    "workbench.editor.untitled.hint": "hidden",

    // ===== Icons Settings =====
    "workbench.iconTheme": "vscode-icons",
    "workbench.productIconTheme": "fluent-icons",
    "vsicons.projectDetection.disableDetect": true,
    "vsicons.dontShowNewVersionMessage": true,

    // ===== Git Graph Plugin ====
    "git-graph.referenceLabels.combineLocalAndRemoteBranchLabels": false,
    "git-graph.repository.commits.initialLoad": 300,
    "git-graph.repository.commits.loadMore": 300,
    "git-graph.showStatusBarItem": false,

    // ===== RedHat Plugins ====
    "redhat.telemetry.enabled": false,

    // ===== Java Developmnet Settings =====
    "java.project.importOnFirstTimeStartup": "automatic",
    "java.referencesCodeLens.enabled": true,
    "java.implementationsCodeLens.enabled": true,
    "java.autobuild.enabled": false,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    "maven.executable.preferMavenWrapper": false,
    "java.debug.settings.showStaticVariables": false,
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.format.settings.profile": "formatter",
    "java.format.settings.url": "https://raw.githubusercontent.com/revelc/formatter-maven-plugin/master/src/main/resources/formatter-maven-plugin/eclipse/java.xml",
    "maven.terminal.useJavaHome": true,
    "java.semanticHighlighting.enabled": true,
    // - Linux -
    "java.home": "/usr/lib/jvm/java-11-adoptopenjdk",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/java-8-adoptopenjdk",
            "sources": "/usr/lib/jvm/java-8-adoptopenjdk/src.zip",
            "javadoc": "https://docs.oracle.com/javase/8/docs/api"
        },
        {
            "default": true,
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-adoptopenjdk",
            "sources": "/usr/lib/jvm/java-11-adoptopenjdk/lib/src.zip",
            "javadoc": "https://docs.oracle.com/en/java/javase/11/docs/api"
        },
        {
            "name": "JavaSE-16",
            "path": "/usr/lib/jvm/java-16-adoptopenjdk",
            "sources": "/usr/lib/jvm/java-16-adoptopenjdk/lib/src.zip",
            "javadoc": "https://docs.oracle.com/en/java/javase/16/docs/api"
        }
    ],
    // - Windows -
