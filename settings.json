    //      "javadoc": "https://docs.oracle.com/en/java/javase/16/docs/api"
    //    }
    //  ],

    // ===== Go Developmnet Settings =====
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,

    // ===== Markdown PDF Plugin ====
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.format": "A4",

    // ===== Proxy Settings ====
    //"http.proxy": "username:password@example.com:8080",
    //"java.jdt.ls.vmargs": "-Dhttp.proxyHost=example.com -Dhttp.proxyPort=8080 -Dhttp.proxyUser=username -Dhttp.proxyPassword=password -Dhttps.proxyHost=example.com -Dhttps.proxyPort=8080 -Dhttps.proxyUser=username -Dhttps.proxyPassword=password",

    // ===== File Settings ====
    "files.associations": {
        "Dockerfile.*": "dockerfile",
        "dockerfile.*": "dockerfile"
    }

