{
    // ===== Visual Studio Code Settings =====
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "debug.toolBarLocation": "docked",
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "scm.alwaysShowRepositories": true,
    "workbench.tips.enabled": false,
    "extensions.ignoreRecommendations": true,
    "extensions.autoUpdate": false,
    "update.mode": "none",
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "terminal.integrated.automationShell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.automationProfile.windows": null,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editor.decorations.badges":false,
    "workbench.editor.decorations.colors": false,
    "editor.fontFamily": "'Cascadia Code'",
    "editor.fontLigatures": true,
    "security.workspace.trust.enabled" : false,
    "workbench.editor.untitled.hint": "hidden",
    "terminal.integrated.enablePersistentSessions": false,

    // ===== Icons Settings =====
    "workbench.iconTheme": "vscode-icons",
    "vsicons.projectDetection.disableDetect": true,
    "vsicons.dontShowNewVersionMessage": true,

    // ===== Git Graph Plugin ====
    "git-graph.referenceLabels.combineLocalAndRemoteBranchLabels": false,
    "git-graph.repository.commits.initialLoad": 300,
    "git-graph.repository.commits.loadMore": 300,
    "git-graph.showStatusBarItem": false,

    // ===== Java Developmnet Settings =====
    "java.project.importOnFirstTimeStartup": "automatic",
    "java.referencesCodeLens.enabled": true,
    "java.implementationsCodeLens.enabled": true,
    "java.autobuild.enabled": false,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": true,
    "maven.executable.preferMavenWrapper": false,
    "java.debug.settings.showStaticVariables": false,
    "java.format.settings.profile": "formatter",
    "java.format.settings.url": "https://raw.githubusercontent.com/revelc/formatter-maven-plugin/master/src/main/resources/formatter-maven-plugin/eclipse/java.xml",
    "maven.terminal.useJavaHome": true,
    "java.eclipse.downloadSources": true,
    "java.import.generatesMetadataFilesAtProjectRoot": true,
    // - Linux -
    "java.jdt.ls.java.home": "/usr/lib/jvm/java-17-eclipse-temurin",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-1.8",
            "path": "/usr/lib/jvm/java-8-eclipse-temurin",
            "sources": "/usr/lib/jvm/java-8-eclipse-temurin/src.zip",
            "javadoc": "https://docs.oracle.com/javase/8/docs/api"
        },
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-eclipse-temurin",
            "sources": "/usr/lib/jvm/java-11-eclipse-temurin/lib/src.zip",
            "javadoc": "https://docs.oracle.com/en/java/javase/11/docs/api"
        },
        {
            "default": true,
            "name": "JavaSE-17",
            "path": "/usr/lib/jvm/java-17-eclipse-temurin",
            "sources": "/usr/lib/jvm/java-17-eclipse-temurin/lib/src.zip",
            "javadoc": "https://docs.oracle.com/en/java/javase/17/docs/api"
        },
        {
            "name": "JavaSE-19",
            "path": "/usr/lib/jvm/java-19-eclipse-temurin",
            "sources": "/usr/lib/jvm/java-19-eclipse-temurin/lib/src.zip",
            "javadoc": "https://docs.oracle.com/en/java/javase/19/docs/api"
        }
    ],
